<Page
    x:Class="SoonZik.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SoonZik.ViewModel"
    xmlns:view="using:SoonZik.Views"
    xmlns:utils="using:SoonZik.Utils"
    mc:Ignorable="d"
    xmlns:controls="using:SoonZik.Controls"
    DataContext="{StaticResource MainPageViewModel}"
    Background="#424242">
	
    <Page.Resources>
        <utils:BoolToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>
    
    <Grid>
        <view:MainView Visibility="{Binding PivotVisibility, Converter={StaticResource BoolToVis}}" />
        <!--<view:Player Visibility="{Binding PivotVisibility, Converter={StaticResource BoolToVis}}" />-->

        <!--<view:Connexion Visibility="{Binding ConnexionVisibility, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"/>-->
    </Grid>
		
</Page>