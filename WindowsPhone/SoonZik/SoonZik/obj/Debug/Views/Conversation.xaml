<Page
    x:Class="SoonZik.Views.Conversation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoonZik.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- bubble -->
    <Grid>
        <StackPanel>
            <TextBlock Height="60" Text="Maxime" FontSize="40"></TextBlock>
        </StackPanel>
        <Grid Margin="12,69,12,61">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Path Data="M 16,12 16,0 26,0"
			Fill="{StaticResource PhoneAccentBrush}"
			HorizontalAlignment="Right"
			Margin="0,52.667,145.986,-11.334"
			UseLayoutRounding="False" Grid.Row="1" />

            <Path Data="M 16,12 16,0 26,0"
			Fill="{StaticResource PhoneAccentBrush}"
			HorizontalAlignment="Right"
			Margin="0,149,10.083,-107.668"
			UseLayoutRounding="False" Grid.Row="1" />

            <!-- Your actual content here -->
            <StackPanel Grid.Row="1"
				Background="{StaticResource PhoneAccentBrush}" Margin="0,0,138,0.333">
                <TextBlock Text="Hey Comment tu vas?"
					FontWeight="Bold"
					TextWrapping="Wrap"
					Margin="6,12,6,6"
					HorizontalAlignment="Left"
					VerticalAlignment="Top" />

                <TextBlock Text="Send 1min ago"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Margin="6,0,6,6"
					FontFamily="Segoe WP SemiLight" />
            </StackPanel>

            <StackPanel Grid.Row="1"
				Background="{StaticResource PhoneAccentBrush}" Margin="138,96,0,-95.667">
                <TextBlock Text="Super et toi ?"
					FontWeight="Bold"
					TextWrapping="Wrap"
					Margin="6,12,6,6"
					HorizontalAlignment="Left"
					VerticalAlignment="Top" />

                <TextBlock Text="Send 1min ago"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Margin="6,0,6,6"
					FontFamily="Segoe WP SemiLight" />
            </StackPanel>

            <Grid VerticalAlignment="Bottom" Background="Aqua" Height="40" Margin="0,0,0,-502.667" Grid.Row="1">
                <TextBox Height="40"/>
            </Grid>
        </Grid>
    </Grid>
</Page>

