<Page
    x:Class="SoonZik.Views.PlaylistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoonZik.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    xmlns:toolkit="using:Coding4Fun.Toolkit.Controls"
    xmlns:ratingControl="using:JISoft.RatingControl"
    DataContext="{StaticResource PlaylistViewModel}"
    Background="#424242">


    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <Page.Resources>
        <DataTemplate x:Key="ComTemplate">
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="{Binding Path=content}" Foreground="White" FontSize="15" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="MusicTemplate">
            <Grid x:ConnectionId='1' Height="70" Margin="0,0,0,0"                            >
                <Border BorderThickness="0,0,0,1" Width="350" BorderBrush="#7bc2fa" />
                <TextBlock x:Name="MusicTitle" Text="{Binding Path=title}" Foreground="#40a8e2" FontSize="25"
                           Margin="50,0,0,0" />
                <!--<ratingControl:Rating Height="25" Width="125" Margin="50,10,0,0" VerticalAlignment="Bottom"
                                      HorizontalAlignment="Left" ReadOnly="True" Background="Transparent"
                                      RatingItemCount="5" Value="{Binding Path=getAverageNote, Mode=TwoWay}">
                    <ratingControl:Rating.FilledItemStyle>
                        <Style TargetType="ratingControl:RatingItem">
                            <Setter Property="Background" Value="Goldenrod" />
                        </Style>
                    </ratingControl:Rating.FilledItemStyle>
                    <ratingControl:Rating.UnfilledItemStyle>
                        <Style TargetType="ratingControl:RatingItem">
                            <Setter Property="Background" Value="Gray" />
                        </Style>
                    </ratingControl:Rating.UnfilledItemStyle>
                </ratingControl:Rating>-->
                <Image x:ConnectionId='2' x:Name="PlayImage" Source="../Resources/Icones/play.png" Height="30"                            
                       VerticalAlignment="Center" HorizontalAlignment="Left" />
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:ConnectionId='3' Text="Add to playlist" x:Name="ItemPlaylist"                               />
                        <MenuFlyoutItem x:ConnectionId='4' Text="Add to cart" x:Name="ItemCart"                           />
                        <MenuFlyoutItem x:ConnectionId='5' Text="Delete from playlist" x:Name="ItemDelete"                             />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="GlobalGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox Foreground="Gray" x:Name="PlayListTitle" Text="{Binding ThePlaylist.name, Mode=TwoWay}" FontSize="25" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Background="Transparent" BorderThickness="0,0,0,1" IsEnabled="{Binding BoolRename}"/>
            <Button VerticalAlignment="Center" HorizontalAlignment="Right" Content="{Binding RenameButton}" Command="{Binding RenameCommand}" Margin="0,22,10,21"></Button>
        </Grid>

        <ListBox Background="Transparent" Grid.Row="1" x:Name="MusicListView"
                 ItemsSource="{Binding ThePlaylist.musics}"
                 ItemTemplate="{StaticResource MusicTemplate}"
                 SelectedItem="{Binding SelectedMusic, Mode=TwoWay}" />
        
        <Image x:ConnectionId='6' x:Name="PlayAll" Grid.Row="2" Source="../Resources/Icones/play.png"                          />
    </Grid>
</Page>

