<Page
    x:Class="SoonZik.Views.ProfilArtiste"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoonZik.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    DataContext="{StaticResource ProfilArtisteViewModel}"
    Background="#424242">

    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding SelectionCommand}" />
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>


    <Grid x:Name="GlobalGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <DataTemplate x:Key="AlbumTemplate">
                <Grid x:ConnectionId='1' Height="70" Margin="20,0,0,0"                            >
                    <Border BorderThickness="0,0,0,1" Width="350" BorderBrush="White" />
                    <Image x:Name="AlbumImage" Source="{Binding Path=imageAlbum}" Height="50"
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" />
                    <TextBlock x:Name="MusicTitle" Text="{Binding Path=title}" FontSize="25"
                               HorizontalAlignment="Center" />
                    <Image x:Name="MoreOption" Source="../Resources/Icones/menu.png" Height="30"
                           VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" />
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <Grid Grid.Row="0">
            <Image Name="ImageArtiste" Source="{Binding Path=TheArtiste.profilImage}" Width="150" Height="150"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,10,0,0" />

            <TextBlock x:Name="AlbumTitle" Text="{Binding TheArtiste.username}" FontSize="30"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,120,0,0" />

            <TextBlock x:Name="ArtistName" Text="{Binding NbrFollowers}" FontSize="20"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,250,0,0" />
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="{Binding FollowText}"
                    Command="{Binding FollowCommand}" />
            <Button Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                    Content="{Binding ButtonFriendText}"
                    Command="{Binding AddCommand}" />
        </Grid>
        <ListView Grid.Row="1" x:Name="MusicListView" ItemsSource="{Binding ListAlbums}"
                  ItemTemplate="{StaticResource AlbumTemplate}" SelectedItem="{Binding TheAlbum, Mode=TwoWay}" />
    </Grid>
</Page>

