<UserControl
    x:Class="SoonZik.Controls.Player"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoonZik.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="400">

    <UserControl.RenderTransform>
        <CompositeTransform/>
    </UserControl.RenderTransform>
    
    <Grid x:Name="GlobalPlayerGrid" Background="#d3d7da">
        <Image Source="../Resources/disc.png" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="10,10,0,0"/>
        <Image Source="../Resources/previous_icon.png" Width="20" HorizontalAlignment="Right" VerticalAlignment="Top"
               Margin="0,35,74,0"/>
        <Image Source="../Resources/play_icon.png" Width="25" HorizontalAlignment="Right" VerticalAlignment="Top"
               Margin="0,32,40,0"/>
        <Image Source="../Resources/next_icon.png" Width="20" HorizontalAlignment="Right" VerticalAlignment="Top"
               Margin="0,35,12,0"/>
    </Grid>
</UserControl>

