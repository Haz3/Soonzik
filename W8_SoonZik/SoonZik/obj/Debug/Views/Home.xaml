<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoonZik"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:SampleData="using:Blend.SampleData.SampleDataSource8" xmlns:SampleData1="using:Blend.SampleData.SampleDataSource6" xmlns:SampleData2="using:Blend.SampleData.SampleDataSource5"
    x:Class="SoonZik.Home"
    mc:Ignorable="d">


	<Page.Resources>
		<SampleData:SampleDataSource8 x:Key="SampleDataSource8" d:IsDataSource="True"/>
		<SampleData1:SampleDataSource6 x:Key="SampleDataSource6" d:IsDataSource="True"/>
		<SampleData2:SampleDataSource5 x:Key="SampleDataSource5" d:IsDataSource="True"/>
		<DataTemplate x:Key="GroupTemplate">
			<Grid Height="110" Width="480" Margin="10" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Border Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}" Width="110" Height="110">
					<Image Height="110" Width="110"/>
				</Border>
				<StackPanel Grid.Column="1" Margin="10,0,0,0">
					<TextBlock Text="{Binding Property1}" Style="{StaticResource TitleTextBlockStyle}"/>
					<TextBlock Text="{Binding Property2}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="NoWrap"/>
				</StackPanel>
			</Grid>
		</DataTemplate>
		<DataTemplate x:Key="GroupTemplate1">
			<Grid Height="110" Width="480" Margin="10" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Border Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}" Width="110" Height="110">
					<Image Source="{Binding Property3}" Height="110" Width="110"/>
				</Border>
				<StackPanel Grid.Column="1" Margin="10,0,0,0">
					<TextBlock Text="{Binding Property1}" Style="{StaticResource TitleTextBlockStyle}"/>
					<TextBlock Text="{Binding Property2}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="NoWrap"/>
				</StackPanel>
			</Grid>
		</DataTemplate>
		<DataTemplate x:Key="GroupTemplate2">
			<Grid Height="110" Width="480" Margin="10" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Border Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}" Width="110" Height="110">
					<Image Source="{Binding Property3}" Height="110" Width="110"/>
				</Border>
				<StackPanel Grid.Column="1" Margin="10,0,0,0">
					<TextBlock Text="{Binding Property1}" Style="{StaticResource TitleTextBlockStyle}"/>
					<TextBlock Text="{Binding Property2}" Style="{StaticResource CaptionTextBlockStyle}" TextWrapping="NoWrap"/>
				</StackPanel>
			</Grid>
		</DataTemplate>
	</Page.Resources>


	<Grid Background="#CCCCCC" HorizontalAlignment="Left" Height="1080" VerticalAlignment="Top" Width="1920" DataContext="{Binding Source={StaticResource SampleDataSource5}}">

		<Grid Background="#B0B0B0" Width="1920" Height="80" Margin="0,0,0,997">
			<Button x:ConnectionId='1' x:Name="news_btn" x:Uid="news_btn" Content="News" HorizontalAlignment="Left" Margin="-1,1,0,0" VerticalAlignment="Top" Height="86" Width="182" FontFamily="Berlin Sans FB Demi" FontSize="53.333" BorderBrush="{x:Null}" Foreground="#FF27AAE1"                       />
            <Button x:ConnectionId='2' x:Name="shop_btn" x:Uid="shop_btn" Content="Magasin" HorizontalAlignment="Left" Margin="187,1,0,-7" VerticalAlignment="Top" Height="86" Width="253" Background="{x:Null}" FontFamily="Berlin Sans FB Demi" FontSize="53.333" BorderBrush="{x:Null}" Foreground="#FF27AAE1"                       />
            <Button x:ConnectionId='3' x:Name="community_btn" x:Uid="community_btn" Content="Communauté" HorizontalAlignment="Left" Margin="446,1,0,-7" VerticalAlignment="Top" Height="86" Width="369" Background="{x:Null}" FontFamily="Berlin Sans FB Demi" FontSize="53.333" BorderBrush="{x:Null}" Foreground="#FF27AAE1"                            />
            <Button x:ConnectionId='4' x:Name="audio_player_btn" x:Uid="audio_player_btn" Content="Lecteur Audio" HorizontalAlignment="Left" Margin="824,1,0,-7" VerticalAlignment="Top" Height="86" Width="390" Background="{x:Null}" FontFamily="Berlin Sans FB Demi" FontSize="53.333" BorderBrush="{x:Null}" Foreground="#FF27AAE1"                               />
		</Grid>
		<ListView x:Name="News" Background="#B0B0B0" HorizontalAlignment="Left" Height="800" Margin="154,220,0,0" VerticalAlignment="Top" Width="500" ItemTemplate="{StaticResource GroupTemplate}" ItemsSource="{Binding Groups}"/>
		<ListView x:Name="Music" Background="#B0B0B0" HorizontalAlignment="Left" Height="800" Margin="710,220,0,0" VerticalAlignment="Top" Width="500" DataContext="{Binding Source={StaticResource SampleDataSource6}}" ItemTemplate="{StaticResource GroupTemplate1}" ItemsSource="{Binding Groups}"/>
		<ListView x:Name="Community" Background="#B0B0B0" HorizontalAlignment="Left" Height="800" Margin="1266,220,0,0" VerticalAlignment="Top" Width="500" DataContext="{Binding Source={StaticResource SampleDataSource8}}" ItemTemplate="{StaticResource GroupTemplate2}" ItemsSource="{Binding Groups}"/>

        <TextBlock x:Name="news_txt" x:Uid="news_txt" HorizontalAlignment="Left" Margin="154,159,0,0" TextWrapping="Wrap" Text="Dernières news" VerticalAlignment="Top" Height="50" Width="500" FontSize="40" Foreground="#FF27AAE1"/>
        <TextBlock x:Name="music_txt" x:Uid="music_txt" Margin="710,159,0,0" TextWrapping="Wrap" Text="Musique" VerticalAlignment="Top" Height="50" Width="500" FontSize="40" Foreground="#FF27AAE1" HorizontalAlignment="Left"/>
		<TextBlock x:Name="community_txt" x:Uid="community_txt" HorizontalAlignment="Left" Margin="1266,159,0,0" TextWrapping="Wrap" Text="Communauté" VerticalAlignment="Top" Height="50" Width="500" FontSize="40" Foreground="#FF27AAE1"/>
	</Grid>
</Page>

