                    </StackPanel>

                    <StackPanel x:Name="album_sp" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock TextWrapping="Wrap" x:Uid="album_txt" Text="Album:" FontSize="21.333" FontWeight="Bold"/>
