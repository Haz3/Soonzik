                    <StackPanel x:Name="year_sp" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock TextWrapping="Wrap" x:Uid="year_txt" Text="Année:" FontSize="21.333" FontWeight="Bold"/>
