        <ListView x:Name="Community" ItemsSource="{Binding tweet_list, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="#B0B0B0" Height="465" Margin="1356,320,0,0" VerticalAlignment="Top" IsItemClickEnabled="True" IsSwipeEnabled="False" SelectionMode="None" HorizontalAlignment="Left" Width="454">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <!--<StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding user.username}" Margin="20,0,0,0"/>
                            <TextBlock Text="{Binding msg}"/>
                        </StackPanel>-->
                        <TextBlock Margin="20,0,0,0">
                            <Run x:Uid="author_txt" Text="Auteur:"></Run>
                            <Run Text="{Binding user.username}"></Run>
                        </TextBlock>
                        <TextBlock Margin="20,0,0,0">
                            <Run Text="Message: "></Run>
                            <Run Text="{Binding msg}"></Run>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="news_txt" x:Uid="news_txt" HorizontalAlignment="Left" Margin="30,145,0,0" TextWrapping="Wrap" Text="Dernières news" VerticalAlignment="Top" Height="50" Width="310" FontSize="40" Foreground="#FF27AAE1"/>
        <!--<TextBlock x:Name="music_txt" x:Uid="music_txt" Margin="710,159,0,0" TextWrapping="Wrap" Text="Musique" VerticalAlignment="Top" Height="50" Width="500" FontSize="40" Foreground="#FF27AAE1" HorizontalAlignment="Left"/>-->
        <TextBlock x:Name="community_txt" x:Uid="community_txt" HorizontalAlignment="Left" Margin="1465,250,0,0" TextWrapping="Wrap" Text="Communauté" VerticalAlignment="Top" Height="50" Width="389" FontSize="40" Foreground="#FF27AAE1"/>
        <TextBlock x:Name="feedback" HorizontalAlignment="Left" Margin="10,1045,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="275" Foreground="#FF111111" FontSize="25">
            <Hyperlink NavigateUri="http://api.lvh.me:3000/feedbacks/new" Foreground="#FF611EFF" >Feedback</Hyperlink>
        </TextBlock>
        <TextBlock x:Name="pack_txt" x:Uid="pack_txt" Margin="520,145,0,0" TextWrapping="Wrap" Text="Packs" VerticalAlignment="Top" Height="50" Width="500" FontSize="40" Foreground="#FF27AAE1" HorizontalAlignment="Left"/>

        <GridView x:Name="news_grid" ItemClick="news_grid_ItemClick" IsItemClickEnabled="True" ItemsSource="{Binding news_list, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="30,200,0,0" VerticalAlignment="Top" Width="425" Height="740">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="200" Height="200">
                        <Image Stretch="Fill" Source="http://assos-escrennes.fr/descibel-radio/wp-content/uploads/2015/01/Generic-News-Logo.png" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,10">
                            <TextBlock Text="{Binding title}" FontSize="20" Margin="10,0,0,0" TextTrimming="WordEllipsis" TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="Black"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <GridView x:Name="pack_grid" ItemClick="pack_list_ItemClick" IsItemClickEnabled="True" ItemsSource="{Binding pack_list, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="520,200,0,0" VerticalAlignment="Top" Width="425" Height="740">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="200" Height="200">
                        <Image Stretch="Fill" Source="ms-appx:///Assets/Record-Album-02.jpg" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,10">
                            <TextBlock Text="{Binding title}" FontSize="20" Margin="10,0,0,0" TextTrimming="WordEllipsis" TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</Page>