= form_for @music do |f|
  - if @music.errors.any?
    #error_explanation
      %h2= "#{pluralize(@music.errors.count, "error")} prohibited this music from being saved:"
      %ul
        - @music.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :album_id
    = f.number_field :album_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :duration
    = f.number_field :duration
  .field
    = f.label :style
    = f.text_field :style
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :file
    = f.text_field :file
  .field
    = f.label :limited
    = f.check_box :limited
  .actions
    = f.submit 'Save'
