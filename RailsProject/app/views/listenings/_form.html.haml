= form_for @listening do |f|
  - if @listening.errors.any?
    #error_explanation
      %h2= "#{pluralize(@listening.errors.count, "error")} prohibited this listening from being saved:"
      %ul
        - @listening.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :music_id
    = f.number_field :music_id
  .field
    = f.label :when
    = f.datetime_select :when
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .actions
    = f.submit 'Save'
