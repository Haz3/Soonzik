= form_for @album_note do |f|
  - if @album_note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album_note.errors.count, "error")} prohibited this album_note from being saved:"
      %ul
        - @album_note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :album_id
    = f.number_field :album_id
  .field
    = f.label :value
    = f.number_field :value
  .actions
    = f.submit 'Save'
