= form_for @flac do |f|
  - if @flac.errors.any?
    #error_explanation
      %h2= "#{pluralize(@flac.errors.count, "error")} prohibited this flac from being saved:"
      %ul
        - @flac.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :music_id
    = f.number_field :music_id
  .field
    = f.label :file
    = f.text_field :file
  .actions
    = f.submit 'Save'
