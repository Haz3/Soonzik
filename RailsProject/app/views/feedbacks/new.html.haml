= form_for @feedback do |f|
	- if @feedback.errors.any?
		#error_explanation{ :class => "#{@feedback.errors.size > 0}" }
			%h2= "#{pluralize(@feedback.errors.count, "error")} prohibited this feedback from being saved:"
			%ul
				- @feedback.errors.full_messages.each do |msg|
					%li
						= msg
	.row
		.large-3.small-3.columns.inline
			= f.label :email
		.small-9.columns
			= f.text_field :email, :class => "radius"
		.large-3.small-3.columns.inline
			= f.label :type_object
		.small-9.columns
			= f.select(:type_object, options_for_select(@selectedObject, @feedback.type_object), include_blank: true)
		.large-3.small-3.columns.inline
			= f.label :object
		.small-9.columns
			= f.text_field :object, :class => "radius"
		.large-3.small-3.columns.inline
			= f.label :text
		.small-9.columns
			= f.text_area :text, :class => "radius"
		.small-12.columns
			= f.submit 'Save', :class => "button radius expand success"