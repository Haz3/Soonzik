.row
  /#notice= notice
  .background-profil
    .photo-profil-user.text-center
      =image_tag(@user.image, "class" => "photo-profil-user")
    .username.text-center
      %b
        = @user.username
    .nb-followers.text-center
      = @user.followers.size
      Followers
    .social-network.text-center
      %a{:href => @user.facebook}
        %i.step.fi-social-facebook.size-42
      %a{:href => @user.twitter}
        %i.step.fi-social-twitter.size-42
      %a{:href => @user.googlePlus}
        %i.step.fi-social-google-plus.size-42
  .large-12.large-centered.columns
    .top-songs
      .h1.subheader
        Top Songs
      %table
        %tbody.radius
          - cnt = 00 
          - @topFive.each_with_index do |song, index|
            - cnt += 01
            %tr
              %td{:width => "50"}
                = cnt
              %td{:width => "1200"}
                = song[:object].title
              %td{:width => "150"}
                = song[:object].duration
                = song[:object].price
              %td{:width => "50"} +
    .albums
      Albums
    .packsImplicated
      Packs dans lequel est prÃ©sent l'artiste
    
  = link_to 'Edit', edit_user_path(@user)
  \|
  = link_to 'Back', users_path
