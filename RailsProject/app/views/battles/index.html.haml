%h1 Listing battles

%table
  %tr
    %th Date begin
    %th Date end
    %th Artist one
    %th Artist two
    %th
    %th
    %th

  - @battles.each do |battle|
    %tr
      %td= battle.date_begin
      %td= battle.date_end
      %td= battle.artist_one_id
      %td= battle.artist_two_id
      %td= link_to 'Show', battle
      %td= link_to 'Edit', edit_battle_path(battle)
      %td= link_to 'Destroy', battle, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Battle', new_battle_path
