= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :style
    = f.text_field :style
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :file
    = f.text_field :file
  .field
    = f.label :yearProd
    = f.number_field :yearProd
  .actions
    = f.submit 'Save'
