= form_for @genre do |f|
  - if @genre.errors.any?
    #error_explanation
      %h2= "#{pluralize(@genre.errors.count, "error")} prohibited this genre from being saved:"
      %ul
        - @genre.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :style_name
    = f.text_field :style_name
  .field
    = f.label :color_name
    = f.text_field :color_name
  .field
    = f.label :color_hexa
    = f.text_field :color_hexa
  .actions
    = f.submit 'Save'
