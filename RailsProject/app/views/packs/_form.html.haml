= form_for @pack do |f|
  - if @pack.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pack.errors.count, "error")} prohibited this pack from being saved:"
      %ul
        - @pack.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :style
    = f.text_field :style
  .actions
    = f.submit 'Save'
