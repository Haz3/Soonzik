= form_for @commentary do |f|
  - if @commentary.errors.any?
    #error_explanation
      %h2= "#{pluralize(@commentary.errors.count, "error")} prohibited this commentary from being saved:"
      %ul
        - @commentary.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author_id
    = f.number_field :author_id
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
