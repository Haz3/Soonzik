= form_for @description do |f|
  - if @description.errors.any?
    #error_explanation
      %h2= "#{pluralize(@description.errors.count, "error")} prohibited this description from being saved:"
      %ul
        - @description.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :language
    = f.text_field :language
  .actions
    = f.submit 'Save'
