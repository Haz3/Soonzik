%pack{ "ng-init" => "showPacksById()" }
  %loading{ "ng-if" => "loading == true" }
  .row{ "ng-if" => "loading == false", "ng-init" => "initFoundation()"}
    %div{"ng-show" => "thisPackId"}
      %h3.subheader.text-center
        {{ thisPack.title }}
      %h5.subheader.text-center
        Time is running out : {{ timeLeft }}
      .ul.large-block-grid-4.centered.columns
        %li{"ng-repeat" => "album in thisPack.albums"}
          .panel
            %h3.subheader
              %p.text-center
                {{ album.title }}
            %a{:href => "http://lvh.me:3000/albums/ {{ album.id }}"}
              %img{"src" => "/assets/pack1.jpg"}
            .divider
            Artiste : {{ album.user.username }}
            %br
            Sortie : {{ album.yearProd }}
      .row
        .large-6.columns
          .panel.left
            .large-9.columns
              Artiste
              .range-slider.round{"data-options" => "display-selector: #priceArtist; start:0; end:100; initial: 70", "data-slider" => ""}
                %span.range-slider-handle{:role => "slider", "tabindex" => "0"}
                %span.range-slider-active-segment
            .small-3.columns
              %br
              %input#priceArtist{:type => "number", "value" => "70"}
            .large-9.columns
              Associations
              .range-slider.round{"data-options" => "display-selector: #priceAsso; start:0; end:100; initial: 20", "data-slider" => ""}
                %span.range-slider-handle{:role => "slider", "tabindex" => "0"}
                %span.range-slider-active-segment
            .small-3.columns
              %br
              %input#priceAsso{:type => "number", "value" => "20"}
            .large-9.columns
              Développeur
              .range-slider.round{"data-options" => "display-selector: #priceDev; start:0; end:100; initial: 10", "data-slider" => ""}
                %span.range-slider-handle{:role => "slider", "tabindex" => "0"}
                %span.range-slider-active-segment
            .small-3.columns
              %br
              %input#priceDev{:type => "number", "value" => "10"}
            .large-4.columns
              .divider
              Total : 
        .large-6.columns
          .panel.right
            Infos concernant le prix, ou va l'argent.
        .large-12.columns
          .button.expand.radius.success
            %a{"data-reveal-id" => "addToCart", :href => "#"} Ajouter au Panier
            #addToCart.reveal-modal{"aria-hidden" => "true", "aria-labelledby" => "modalTitle", "data-reveal" => "", :role => "dialog"}
              %h2#modalTitle ET HOP ! C'EST DANS VOTRE PANIER
              %h3.center {{ thisPack.title }}
              .ul.large-block-grid-4.centered.columns
                %li{"ng-repeat" => "album in thisPack.albums"}
                  .panel
                    %h3.subheader
                      %p.large-text-center 
                        {{ album.title }}
                    %a{:href => "http://lvh.me:3000/albums/ {{ album.id }}"}
                      %img{"src" => "/assets/pack1.jpg"}
                    .divider
                    Artiste : {{ album.user.username }}
                    %br
                    Sortie : {{ album.yearProd }}
              %a.close-reveal-modal{"aria-label" => "Close"} ×
              %p
                %a.close-reveal-modal.my-modal Continuer mes achats
              %a.close-reveal-modal.my-modal{:href => "http://lvh.me:3000/carts"} Voir mon Panier
