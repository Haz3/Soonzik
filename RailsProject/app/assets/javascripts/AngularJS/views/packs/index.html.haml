%div{ "ng-init" => "showPacks()" }
  %loading{ "ng-if" => "loading == true" }
  .row{ "ng-if" => "loading == false", "ng-init" => "initFoundation()"}
    %h3.subheader
      Packs du moment
    .ul.large-block-grid-4{"ng-show" => "Pack"}
      %li{ "ng-repeat" => "packs in pack"}
        .panel
          %h5.subheader.text-center
            {{ packs.title }}
          %a{:href=>"http://lvh.me:3000/packs/" + "{{packs.id}}" }
            %img{"src" => "/assets/pack1.jpg"}
          .divider
          Temps Restant :
          %br
          Moyenne : 