%div{ "ng-init" => "showInit()" }
  %loading{ "ng-if" => "loading == true" }
  .row{ "ng-if" => "loading == false" }
    /#notice= notice
    .background-profil
      /=image_tag(@show.user.background)
      .large-2.small-12.columns.large-centered
        .photo-profil-show.user.large-centered
          %img.photo-profil-user{ "ng-src" => '{{ "/assets/usersImage/avatars/" + show.user.image }}' }
      .username.text-center
        %b
          {{ show.user.username }}
      .small-2.columns.large-centered.inline
        .nb-followers.text-center
          {{ show.user.followers.length }}
          Followers
          .button.tiny.expand.info.radius
            Follow
      .social-network.text-center
        %a{:href => '{{show.user.facebook}}'}
          %i.step.fi-social-facebook.size-42
        %a{:href => '{{show.user.twitter}}'}
          %i.step.fi-social-twitter.size-42
        %a{:href => '{{show.user.googlePlus}}'}
          %i.step.fi-social-google-plus.size-42
    .large-12.large-centered.columns{ 'ng-if' => 'show.user.isArtist' }
      .top-songs
        %h1.subheader.lato
          Top Songs
        %table.radius
          %thead.radius
            %tr
              %th Title
              %th Duration
              %th Price
              %th Rate
              %th 
              %th 
          %tbody.radius
            %tr{ 'ng-repeat' => 'song in show.user.topFive track by $index' }
              %td{:width => '1000'}
                {{song.music.title}}
              %td{:width => '100'}
                {{ formatTime(song.music.duration) }}
              %td{:width => '50'}
                {{song.music.price}} $
              %td{:width => '200'}
                %i.fi-star{ "ng-repeat" => "n in range(song.note)" }
              %td{:width => '50'}
                %music{ "music-object" => "song.music", artist: "show.user.username" }
                  %i.fi-play
              %td{:width => '50'} +
      .albums
        %h1.subheader.lato
          Albums
        .row{ 'ng-repeat' => 'album in show.user.albums track by $index' }
          .panel.clearfix
            %img{ "ng-src" => "{{'/assets/albums/' + album.image}}" }
            %table.right
              %thead
                %tr
                  %th{ colspan: '5' } {{album.title}}
              %tbody
                %tr{ 'ng-repeat' => 'song in album.musics track by $index' }
                  %td{:width => '50'}
                    {{$index + 1 }}
                  %td{:width => '300'}
                    {{song.title}}
                  %td{:width => '100'}
                    {{song.duration}}
                  %td{:width => '50'}
                    {{song.price}}
                  %td{:width => '50'}
                    %music{ "music-object" => "song", artist: "show.user.username" }
                      %i.fi-play
                  %td{:width => '50'} +
            %hr
            %p {{ album.yearProd }} - {{ show.user.username }}
      .packsImplicated
        %h1.subheader
          Packs
        .panel
