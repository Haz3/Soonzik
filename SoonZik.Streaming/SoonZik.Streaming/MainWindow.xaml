        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="720" Width="1080"
        Background="#181818">
    <Grid>
    	<TabControl HorizontalAlignment="Left" Height="689" VerticalAlignment="Top" Width="1072">
    		<TabItem Header="Record" FontSize="20">
                <Grid Background="#FF181818">
                    <TextBlock x:Name="WelcomeTextBlock" Foreground="DeepSkyBlue" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                </Grid>
            </TabItem>
    		<TabItem Header="Upload" FontSize="20">
    			<Grid Background="#FF181818"/>
    		</TabItem>
    	</TabControl>

    </Grid>
</Window>
